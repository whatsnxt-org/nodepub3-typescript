doctype xml
- var lang = document.metadata.language
html(
  xmlns='http://www.w3.org/1999/xhtml',
  xmlns:epub='http://www.idpf.org/2007/ops',
  xml:lang=lang
)
  head
    - var title = document.metadata.coverChapterTitle
    - title = title ? title : lang == 'zh' ? '封面' : 'Cover'
    title #{title}
    style(type='text/css').
      @page {
        padding: 0pt;
        margin: 0pt;
      }
      body {
        display: flex;
        justify-content: center;
        align-items: center;
      }
      body img {
        max-width: 100%;
        max-height: 100%;
      }
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')/
  body
    img(src=document.metadata.cover.name, alt=title)/

