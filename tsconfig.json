  "compilerOptions": {
    /* Language and Environment */
    "target": "ESNext",
    "lib": ["ESNext"],

    /* Modules */
    "moduleResolution": "node",
    "baseUrl": ".",

    /* JavaScript Support */
    "sourceMap": true,
    "outDir": "./dist",

    /* Interop Constraints */
